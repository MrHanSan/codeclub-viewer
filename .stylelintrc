{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-css-modules"
  ],
  "rules": {
    "rule-empty-line-before": [ "always-multi-line", {
      "except": ["first-nested"],
      "ignore": ["after-comment", "inside-block"]
    }],
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "value",
        "mixin",
        "include"
      ]
    }],
    "declaration-empty-line-before": [ "never" ]
  }
}
